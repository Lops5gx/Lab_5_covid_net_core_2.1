@model COVID19.Models.DadoCovid

@{
    ViewData["Title"] = "Deletar dados";
}

<h1>Deletar dados</h1>

<h3>Tem certeza que deseja deletar estes dados?</h3>
<div>
    <h4>Dados Covid-19</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mortes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mortes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.confirmados)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.confirmados)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.recuperados)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.recuperados)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.pais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pais.nomePais)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn">Voltar à lista</a>
    </form>
</div>
