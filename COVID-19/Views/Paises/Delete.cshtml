@model COVID19.Models.Pais

@{
    ViewData["Title"] = "Deletar país";
}

<h1>Deletar país</h1>

<h3>Tem certeza que deseja deletar este país?</h3>
<div>
    <h4>País</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nomePais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nomePais)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idPais" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn">Voltar à lista</a>
    </form>
</div>

